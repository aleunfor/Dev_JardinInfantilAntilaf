<div class="container">
    <div class="row">
        <div class="col-md-10 mx-auto mt-5">
            <h1 class="mb-2">{{comunicado.titulo}}</h1>
            <h3 class="mb-2">{{comunicado.subtitulo}}</h3>
            <p class="mb-2">{{comunicado.autor}} | <span id="nivel">{{comunicado.nivel_idnivel}}</span></p>
            <p class="mb-2">{{timeago comunicado.fecha_creacion}}</p>
            <p class="mb-2">{{{comunicado.comunicado}}}</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 mx-auto mt-5">
            <form action="/comunicados/vercomunicado/{{comunicado.idcomunicado}}/agregar-comentario" method="POST">
                <div class="form-group mb-2">
                    <textarea type="text" class="form-control" name="comentario"
                        placeholder="Comentar como {{usuario.nombre}} {{usuario.apellido}}"></textarea>
                </div>
                <div class="form-group mb-2">
                    <button class="btn btn-success w-100">Comentar</button>
                </div>
            </form>
        </div>
    </div>
    {{#each comentarios}}
    <div class="row">
        <div class="col-md-8 mx-auto mt-3">
            <div class="card w-100">
                <div class="card-body">
                    <h5>{{nombre}} {{apellido}}</h5>
                    <p>{{comentario}}</p>
                </div>
            </div>
        </div>
    </div>
    {{else}}
    <div class="row">
        <div class="col-md-8 mx-auto mt-2">
            <div class="card w-100">
                <div class="card-body">
                    <h5>Vaya no hay comentarios a√∫n!</h5>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
<script>
    $(document).ready(function () {
        let nivel = $("#nivel").html();
        if (nivel == 1){
            $("#nivel").html("Sala Cuna");
        }else if (nivel == 2){
            $("#nivel").html("Nivel Medio");
        }
    });
</script>