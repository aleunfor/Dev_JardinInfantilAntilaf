<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1>Escribe tu comunicado</h1>
            <div class="card w-100">
                <div class="card-body">
                    <form name="formComunicado" action="/comunicados/agregar-comunicado" method="POST">
                        <div class="form-group mb-2">
                            <input type="text" class="form-control" name="titulo" placeholder="Título" autofocus>
                        </div>
                        <div class="form-group mb-2">
                            <input type="text" class="form-control" name="subtitulo" placeholder="Sub-Título">
                        </div>
                        <div class="form-group mb-2">
                            <textarea id="comunicado" class="form-control" type="text" rows="5" size="5"
                                name="comunicado" placeholder="Comunicado"></textarea>
                        </div>

                        <div class="form-group mb-2">
                            <label for="nivel_idnivel">Elija Nivel</label>
                            <select name="nivel_idnivel" class="form-select" aria-label="Default select example">
                                <option value="1" selected>Sala Cuna</option>
                                <option value="2">Nivel Medio</option>
                            </select>
                        </div>
                        <div class="form-group mb-2">
                            <button class="btn btn-success w-100">Postear</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="module">
    
    CKEDITOR.replace('comunicado', {
        filebrowserUploadUrl: '/comunicados/upload',
        "extraPlugins": "imagebrowser",
        "imageBrowser_listUrl": "/comunicados/imagenes"
    });

</script>
<script src="/js/comunicadoValidation.js"></script>