<div class="container p-4">
    <div class="row">
        <h1>Escribe tu comunicado</h1>
        <input value="{{comunicado.nivel_idnivel}}" id="nivel" class="d-none" type="text" rows="5" size="5"
            name="nivel">
        <div class="col-md-8 mx-auto">
            <div class="card w-100">
                <div class="card-body">
                    <form name="formComunicado" action="/comunicados/editar-comunicado/{{comunicado.idcomunicado}}" method="POST">
                        <div class="form-group mb-2">
                            <input value="{{comunicado.titulo}}" type="text" class="form-control" name="titulo"
                                placeholder="Título" autofocus value="">
                        </div>
                        <div class="form-group mb-2">
                            <input value="{{comunicado.subtitulo}}" type="text" class="form-control" name="subtitulo"
                                placeholder="Sub-Título">
                        </div>
                        <div class="form-group mb-2">
                            <textarea id="comunicado" class="form-control" type="text" rows="5" size="5"
                                name="comunicado" placeholder="Comunicado">{{{comunicado.comunicado}}}</textarea>
                        </div>
                        <script>
                            // seleccionamos el valor de un input invisible
                            // segun el valor, se despliega el nivel
                            $(document).ready(function () {
                                let nivel = $('#nivel').val();
                                if (nivel == 1) {
                                    $("#idnivel option[value=1]").attr("selected", true);
                                } else if (nivel == 2) {
                                    $("#idnivel option[value=2]").attr("selected", true);
                                }
                            });
                        </script>
                        <div class="form-group mb-2">
                            <label for="nivel_idnivel">Elija Nivel</label>
                            <select name="nivel_idnivel" class="form-select" aria-label="Elegir Nivel" id="idnivel">
                                <option value="1">Sala Cuna</option>
                                <option value="2">Nivel Medio</option>
                            </select>
                        </div>
                        <div class="form-group mb-2">
                            <button class="btn btn-success w-100">Editar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    
    CKEDITOR.replace('comunicado', {
        filebrowserUploadUrl: '/comunicados/upload',
        "extraPlugins": "imagebrowser",
        "imageBrowser_listUrl": "/comunicados/imagenes"
    });
    

</script>

<script src="/js/comunicadoValidation.js"></script>