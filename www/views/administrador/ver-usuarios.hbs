{{>navegacion-admin}}
<div class="container">
    <div class="col-md-8 mx-auto">
        <div class="card mt-5 mb-3 mx-auto w-100">
            <div class="card-body">
                <h1 class="fw-bold">Usuarios</h1>
            </div>
        </div>
    </div>
    <div class="row usuarios-web">
        <table class="table table-responsive mt-2">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">RUT</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Fecha Nacimiento</th>
                    <th scope="col">Direccion</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">Email</th>
                    <th scope="col">Rol</th>
                    <th scope="col">Activado</th>
                </tr>
            </thead>
            <tbody>
                {{#each usuario}}
                <tr>
                    <th scope="row">{{idusuario}}</th>
                    <td>{{rut}}</td>
                    <td>{{nombre}}</td>
                    <td>{{apellido}}</td>
                    <td>{{fecha_nac}}</td>
                    <td>{{direccion}}</td>
                    <td>{{telefono}}</td>
                    <td>{{username}}</td>
                    <td class="tipouser">{{rol}}</td>
                    <td class="activado">{{activado}}</td>
                    <td><a href="/administrador/editar-usuario/{{idusuario}}" class="btn btn-warning">Editar</a></td>
                    <td><a href="/administrador/eliminar-usuario/{{idusuario}}" class="btn btn-danger">Eliminar</a></td>
                </tr>
                {{else}}
                <div class="row ms-1 col-md-4 position-absolute top-50 start-50 translate-middle">
                    <div class="card card-body text-center">
                        <p>Vaya! Aún no hay usuarios!</p>
                        <a class="btn btn-primary" href="/administrador/agregar-usuario">Agregar Usuario</a>
                    </div>
                </div>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="row usuarios-mobile">

        {{#each usuario}}
        <div class="col-md-6">
            <div class="card mb-3 w-100">
                <div class="card-body">
                    <p class="text-center border-bottom"><span class="fw-bold">ID: </span>{{idusuario}}</p>
                    <h5><span class="fw-bold">RUT: </span>{{rut}}</h5>
                    <h6><span class="fw-bold">Nombre: </span>{{nombre}} {{apellido}}</h6>
                    <p><span class="fw-bold">Fecha Nac.: </span>{{fecha_nac}}</p>
                    <p><span class="fw-bold">Dirección: </span>{{direccion}}</p>
                    <p><span class="fw-bold">Teléfono: </span>{{telefono}}</p>
                    <p><span class="fw-bold">Email: </span>{{username}}</p>
                    <p class="d-inline"><span class="fw-bold">Rol: </span>
                    <p id="tipouserMobile" class="d-inline">{{rol}}</p>
                    </p>
                    <p class="d-inline"><span class="fw-bold">Activado: </span>
                    <p id="activadoMobile" class="d-inline">{{activado}}</p>
                    </p>
                    <div class="btn-group" role="group" aria-label="Acciones Admin">
                        <a href="/administrador/editar-usuario/{{idusuario}}" class="btn btn-warning">Editar</a>
                        <a href="/administrador/eliminar-usuario/{{idusuario}}" class="btn btn-danger">Eliminar</a>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <div class="row ms-1 col-md-4 position-absolute top-50 start-50 translate-middle">
            <div class="card card-body text-center">
                <p>Vaya! Aún no hay usuarios!</p>
                <a class="btn btn-primary" href="/administrador/agregar-usuario">Agregar Usuario</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<script src="/js/sidebar.js" crossorigin="anonymous"></script>