{{>navegacion-admin}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1>Agregar usuario</h1>
            <div class="card w-100">
                <div class="card-body">
                    <form name="formAddUser" action="/administrador/agregar-usuario" method="POST">
                        <div class="form-group mb-2">
                            <input id="rut" type="text" class="form-control" name="rut" placeholder="RUT" autofocus>
                        </div>
                        <div class="form-group mb-2">
                            <input type="text" class="form-control" name="nombre" placeholder="Nombre">
                        </div>
                        <div class="form-group mb-2">
                            <input class="form-control" type="text" rows="5" size="5" name="apellido"
                                placeholder="Apellido">
                        </div>
                        <div class="form-group mb-2">
                            <label for="fecha_nac">Fecha de Nacimiento</label>
                            <input class="form-control" type="date" rows="5" size="5" name="fecha_nac">
                        </div>
                        <div class="form-group mb-2">
                            <input class="form-control" type="text" rows="5" size="5" name="direccion"
                                placeholder="Dirección">
                        </div>
                        <div class="form-group mb-2">
                            <input class="form-control" type="text" rows="5" size="5" name="telefono"
                                placeholder="Teléfono">
                        </div>
                        <div class="form-group mb-2">
                            <input class="form-control" type="text" rows="5" size="5" name="username"
                                placeholder="Email">
                        </div>
                        <div class="form-group mb-2">
                            <input class="form-control" type="password" rows="5" size="5" name="password"
                                placeholder="Contraseña">
                        </div>
                        <div class="form-group mb-2">
                            <label for="id_tipousuario">Rol</label>
                            <select class="form-select" name="id_tipousuario">
                                <option selected value="1">Administrador</option>
                                <option value="2">Directivo</option>
                                <option value="3">Parvulario</option>
                                <option value="4">Apoderado</option>
                            </select>
                        </div>
                        <div class="form-group mb-2">
                            <label for="activado">Activado</label>
                            <select class="form-select" name="activado">
                                <option selected value="Si">Si</option>
                                <option value="No">No</option>
                            </select>
                        </div>                        
                        <div class="form-group mb-2">
                            <button id="addUser" class="btn btn-success w-100" disabled>Agregar usuario</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/sidebar.js" crossorigin="anonymous"></script>
<script src="/js/addUserValidation.js" crossorigin="anonymous"></script>