<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto mt-3">
            <h1>Cambiar Contraseña</h1>
            <div class="card w-100 mt-3" style="background: #d7ffe9;">
                <div class="card-body">
                    <form action="/cambio-contrasena" method="POST">
                        <h3>Contraseña Anterior</h3>
                        <div class="form-group">
                            <input type="password" class="form-control inputs" placeholder="Contraseña anterior"
                                name="oldPassword" />
                        </div>
                        <h3 class="mt-4">Contraseña Nueva</h3>
                        <div class="form-group">
                            <input type="password" class="form-control inputs" placeholder="Contraseña nueva"
                                name="newPassword" />
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mt-3"><i class="fas fa-unlock-alt"></i>
                            Cambiar Contraseña
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>