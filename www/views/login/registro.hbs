<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="mt-5">Regístrate!</h1>
            <form name="formRegistro" action="/registro" method="POST">
                <div class="form-group mb-2">
                    <input id="rut" type="text" class="form-control" name="rut" placeholder="RUT" autofocus>
                </div>
                <div id="alertRut"></div>
                <div class="form-group mb-2">
                    <input type="text" class="form-control" name="nombre" placeholder="Nombre">
                </div>
                <div class="form-group mb-2">
                    <input type="text" class="form-control" name="apellido" placeholder="Apellido">
                </div>
                <div class="form-group mb-2">
                    <input type="date" class="form-control" name="fecha_nac" placeholder="Fecha Nac">
                </div>
                <div class="form-group mb-2">
                    <input type="text" class="form-control" name="direccion" placeholder="Dirección">
                </div>
                <div class="form-group mb-2">
                    <input type="number" class="form-control" name="telefono" placeholder="Teléfono">
                </div>
                <div class="form-group mb-2">
                    <input type="email" class="form-control" name="username" placeholder="Email">
                </div>
                <div class="form-group mb-2">
                    <input type="password" class="form-control" name="password" placeholder="Contraseña">
                </div>
                <div class="form-group mb-2">
                    <button id="registrar" class="btn btn-success w-100" disabled>Registrar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/js/registroValidation.js"></script>